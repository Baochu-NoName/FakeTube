<div class="container">
    <%= form_for @video do |f| %>
    <div class="mb-3">
        <%= f.label :title%>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
    </div>

     <div class="mb-3 form-group">
        <%= f.label :category_ids %>
        <%= f.collection_select :category_ids, Category.all.order(:name), :id, :name, {}, {class: 'form-control category-select2', style: "color: white;", multiple: true} %>
    </div>
    
    <div class="mb-3">
        <%= f.label :thumbnail%>
        <%= f.file_field :thumbnail%>
        <img id="video_thumbnail_preview">
    </div>
    <div class="mb-3">
        <%= f.label :clip%>
        <%= f.file_field :clip %>
    </div>

    <div class="mb-3">
        <%= f.label :age_restricted %>
        <%= f.check_box :age_restricted %>
    </div>
    <%= f.submit "Submit", class: 'btn btn-success'%>
    <% end %>
    
</div>
<%= javascript_include_tag "new-video" %>