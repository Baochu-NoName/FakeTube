<!DOCTYPE html>
<html>
  <head>
    <title>FakeTube</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', crossorigin: '' %>
    <%= stylesheet_link_tag 'video-js.min', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'style', 'data-turbolinks-track': 'reload', crossorigin: ''%>
    <%= stylesheet_link_tag 'ie6', 'data-turbolinks-track': 'reload', crossorigin: ''%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'%>
    <%# <link href='/assets/select2.min.css' rel="stylesheet"/>
    <script src='/assets/select2.min.js'></script> %>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,700&display=swap');
     /* Show the controls (hidden at the start by default) */
    .video-js .vjs-control-bar {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
    }

    a,
    a:hover,
    a:visited {
      color: #76DAFF;
    }
    .nav-bar-custom {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      flex-direction: row;
      margin: 0;
      padding: 12px 16px;
      justify-content: center;
      align-items: center;
      background: #212529;
    }
   .clearfix::after {
      content: "";
      clear: both;
      display: table;
    } 
    img {
      max-width: 100%;
    }

    .card{
      margin: 0!important;
    }
    .input-group{
      padding: 5px;
      margin: 10px;
    }
    
    @media (max-width: 800px) {
      .nav-bar-custom {
        flex-direction: column;
      }
    }
  </style>
  </head>
  <body>
      <%= render 'style/header'%>
      <%= render 'layouts/alert' %>
      <div id="shell">
        <%= yield %>
      </div>
      <div id="scroll-top">
        <i class="fa-solid fa-angle-up"></i>
      </div>
      <%= render 'style/footer'%>
    <script>
      (function() {
        let onpageLoad = localStorage.getItem("theme");
        let body = document.body;
        let checkBox = document.getElementById("flexSwitchCheckChecked");
        body.classList.add(onpageLoad);
        if(onpageLoad && onpageLoad === "dark-mode" && !checkBox.checked){
            checkBox.checked = true;
        }else{
            checkBox.checked = false;
        }
      })();

      function themeToggle() {
        let body = document.body;
        body.classList.toggle("dark-mode");

        let theme = localStorage.getItem("theme") || "";
        if (theme && theme === "dark-mode") {
          localStorage.setItem("theme", "light");
        } else {
          localStorage.setItem("theme", "dark-mode");
        }
      }

      //Scroll to top
      $("#scroll-top").on("click", ()=>{
          $("html, body").animate({scrollTop: 0}, 800);
      })
      $(window).on("scroll", ()=>{
        if($("html, body").scrollTop() > 200){
          $("#scroll-top").show();
        }else{
          $("#scroll-top").hide();
        }
      })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body> 
</html>
